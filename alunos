#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#define X 80

	struct Cadastro{
		char nome[X];
		int idade;
		int matricula;
		float media;
	};
	int op = 0;
	int i;
	

int main(void) {
	
	printf("-----------Escolinha Do Zezin-----------\n\n");
	
	printf("Deseja Cadastrar Quantos Alunos? ");
	scanf("%d", &op);
	
	system("cls");
	
	struct Cadastro aluno[op];
	
	for(i = 1; i <= op; i++){
	
	printf("-----------Cadastro De Alunos-----------\n\n");
		
	printf("Digite Nome Do Aluno %d: ", i);
	scanf(" %80[^\n]", &aluno[i].nome);
	fflush(stdin);
	
	printf("Digite Sua Idade: ");
	scanf("%d", &aluno[i].idade);
	fflush(stdin);
	
	printf("Digite Sua Matricula: ");
	scanf("%d", &aluno[i].matricula);
	fflush(stdin);
	
	printf("Digite Sua Media: ");
	scanf("%f", &aluno[i].media);
	fflush(stdin);
	
	}
	
	system("cls");
	
	printf("-----------Escolinha Do Zezin-----------");
	
	for(i = 1; i <= op; i++){
	printf("\n-------------------------------");
	printf("\nNome: %s\nIdade: %d\nMatricula: %d\nMedia: %.2f\n", aluno[i].nome, aluno[i].idade, aluno[i].matricula, aluno[i].media);
	}
	
	
	
	
	
	
	return 0;
}
